# ProctorIQ Backend Environment Configuration

# OpenAI Configuration (Optional - for advanced features)
OPENAI_API_KEY=your_openai_api_key_here

# Groq API Configuration (Free & Fast - Recommended)
GROQ_API_KEY=your_groq_api_key_here

# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017
# For MongoDB Atlas (cloud): mongodb+srv://username:password@cluster.mongodb.net/
DATABASE_NAME=proctoriq

# JWT Authentication
JWT_SECRET=your-secret-key-change-in-production-use-long-random-string
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Pinecone Configuration (DEPRECATED - Using FAISS instead)
# PINECONE_API_KEY=your_pinecone_api_key_here
# PINECONE_ENVIRONMENT=your_pinecone_environment_here
# PINECONE_INDEX_NAME=proctoriq-index

# Application Configuration
DEBUG=True
APP_NAME=ProctorIQ API
APP_VERSION=3.0.0

# File Upload Configuration
MAX_FILE_SIZE=52428800  # 50MB in bytes
UPLOAD_DIRECTORY=uploads

# FAISS Vector Store
FAISS_INDEX_PATH=data/faiss_index
EMBEDDING_MODEL=all-MiniLM-L6-v2

# CORS Configuration (for frontend)
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Database URL (for future use)
# DATABASE_URL=sqlite:///./proctoriq.db
